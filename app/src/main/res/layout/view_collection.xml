<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center_horizontal"
    cardview:cardCornerRadius="3dp"
    cardview:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/apps_left"
            android:visibility="invisible"
            android:background="@color/collection_background"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:background="@color/collection_background"
            >

            <TextView
                android:id="@+id/collection_name"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/collection_status"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@+id/collection_name"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <com.apphunt.app.ui.views.widgets.AvatarImageView
                    android:id="@+id/created_by_image"
                    android:src="@drawable/ic_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:id="@+id/created_by"
                    android:text="Janet Perkins"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/votes_count"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="55dp"
                android:layout_height="55dp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
