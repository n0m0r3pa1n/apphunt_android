<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_secondary"
    android:layout_height="match_parent">

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        style="@style/CircularThemeProgressBar" />

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/collections_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collections"/>

        <TextView
            android:text="More"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:layout_alignParentRight="true"
            android:id="@+id/more_collections"
            android:textStyle="bold"
            android:background="@color/bg_primary"
            android:textSize="@dimen/details_download_text_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="36dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/collections"
            android:layout_below="@+id/more_collections" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/collections_container"
        android:id="@+id/apps_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apps"/>

        <TextView
            android:id="@+id/more_apps"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:background="@color/bg_primary"
            android:padding="2dp"
            android:textSize="@dimen/details_download_text_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="More"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layoutAnimation="@anim/list_view_entry"
            android:id="@+id/apps"
            android:layout_below="@+id/more_apps" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/no_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_results_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search_not_found"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/no_results_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_results_icon"
            android:layout_marginTop="5dp"
            android:text="@string/no_results_found"
            android:textSize="22sp"
            android:textColor="#32000000"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>