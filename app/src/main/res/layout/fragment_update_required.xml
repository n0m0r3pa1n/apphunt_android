<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_secondary">

    <com.apphunt.app.ui.views.widgets.AHTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/notification_text_margin"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="AppHunt Update Available"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:typefacePath="fonts/OpenSans-Regular.ttf"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title"
        android:layout_marginTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@color/bg_primary"
        android:elevation="0dp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher"/>

    <com.apphunt.app.ui.views.widgets.AHTextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_alignStart="@id/title"
        android:layout_below="@id/image"
        android:layout_marginTop="5dp"
        android:text="This update is required to improve your user experience"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center"
        app:typefacePath="fonts/OpenSans-Light.ttf"/>

    <com.apphunt.app.ui.views.widgets.AHTextView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/desc"
        android:layout_marginTop="30dp"
        android:text="UPDATE"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@color/bg_primary"
        app:typefacePath="fonts/OpenSans-Bold.ttf"/>
</RelativeLayout>