<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/follower_container"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/follower_avatar"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/comment_app_icon_size"
        android:layout_height="@dimen/comment_app_icon_size"/>

    <com.apphunt.app.ui.views.widgets.AHTextView
        android:id="@+id/follower_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:textSize="18sp"
        android:layout_toRightOf="@id/follower_avatar"
        android:layout_toLeftOf="@+id/follow"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.apphunt.app.ui.views.widgets.FollowButton
        android:id="@+id/follow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:elevation="0dp"
        app:typefacePath="fonts/OpenSans-Regular.ttf"/>

</RelativeLayout>