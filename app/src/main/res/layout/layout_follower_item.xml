<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/follower_container"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/follower_avatar"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <com.apphunt.app.ui.views.widgets.AHTextView
        android:id="@+id/follower_name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="#B4000000"
        android:layout_toRightOf="@id/follower_avatar"
        android:layout_toLeftOf="@+id/follow"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typefacePath="fonts/OpenSans-Bold.ttf"/>

    <com.apphunt.app.ui.views.widgets.AHTextView
        android:id="@+id/follower_username"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:textColor="#8A000000"
        android:layout_toRightOf="@id/follower_avatar"
        android:layout_toLeftOf="@+id/follow"
        android:layout_below="@+id/follower_name"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typefacePath="fonts/OpenSans-Regular.ttf"/>

    <com.apphunt.app.ui.views.widgets.FollowButton
        android:id="@+id/follow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:elevation="0dp"
        app:typefacePath="fonts/OpenSans-Regular.ttf"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_toRightOf="@+id/follower_avatar"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:elevation="0dp"/>
</RelativeLayout>