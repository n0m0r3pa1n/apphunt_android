<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_semi_fragment"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/settings_container_padding"
        android:background="@color/bg_primary"
        android:visibility="invisible">

        <com.apphunt.app.ui.views.widgets.AHTextView
            android:id="@+id/notifications_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_section_height"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/settings_section_margin_left"
            android:text="@string/section_notifications"
            android:textColor="@android:color/white"
            android:textSize="@dimen/settings_section_text"
            app:typefacePath="fonts/OpenSans-Regular.ttf"/>
        
        <RelativeLayout
            android:id="@+id/item_daily_notifications"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_below="@+id/notifications_section"
            android:layout_marginTop="@dimen/settings_item_margin_top"
            android:background="@drawable/shape_provider_background">

            <com.apphunt.app.ui.views.widgets.AHTextView
                android:id="@+id/label_daily_notification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/toggle_daily_notification"
                android:paddingLeft="@dimen/settings_label_padding_left"
                android:textColor="@android:color/white"
                android:textSize="@dimen/settings_label_text"
                android:text="@string/enable_app_notifications"
                android:gravity="center_vertical"
                app:typefacePath="fonts/OpenSans-Light.ttf"/>

            <ToggleButton
                android:id="@+id/toggle_daily_notification"
                android:layout_width="@dimen/settings_toggle_size"
                android:layout_height="@dimen/settings_toggle_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_toggle_button"
                android:textOn=""
                android:textOff=""/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_install_notifications"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_below="@+id/item_daily_notifications"
            android:layout_marginTop="@dimen/settings_item_margin_top"
            android:background="@drawable/shape_provider_background">

            <com.apphunt.app.ui.views.widgets.AHTextView
                android:id="@+id/label_install_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/toggle_install_notifications"
                android:paddingLeft="@dimen/settings_label_padding_left"
                android:textColor="@android:color/white"
                android:textSize="@dimen/settings_label_text"
                android:text="@string/enable_suggestions"
                android:gravity="center_vertical"
                app:typefacePath="fonts/OpenSans-Light.ttf"/>

            <ToggleButton
                android:id="@+id/toggle_install_notifications"
                android:layout_width="@dimen/settings_toggle_size"
                android:layout_height="@dimen/settings_toggle_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_toggle_button"
                android:textOn=""
                android:textOff=""/>
        </RelativeLayout>

        <com.apphunt.app.ui.views.widgets.AHTextView
            android:id="@+id/sounds_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_section_height"
            android:layout_below="@+id/item_install_notifications"
            android:layout_marginTop="@dimen/settings_section_margin_top"
            android:layout_marginLeft="@dimen/settings_section_margin_left"
            android:text="@string/section_sounds"
            android:textColor="@android:color/white"
            android:textSize="@dimen/settings_section_text"
            app:typefacePath="fonts/OpenSans-Regular.ttf"/>

        <RelativeLayout
            android:id="@+id/item_sounds"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_below="@+id/sounds_section"
            android:layout_marginTop="@dimen/settings_item_margin_top"
            android:background="@drawable/shape_provider_background">

            <com.apphunt.app.ui.views.widgets.AHTextView
                android:id="@+id/label_sounds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/toggle_sounds"
                android:paddingLeft="@dimen/settings_label_padding_left"
                android:textColor="@android:color/white"
                android:textSize="@dimen/settings_label_text"
                android:text="@string/enable_sounds"
                android:gravity="center_vertical"
                app:typefacePath="fonts/OpenSans-Light.ttf"/>

            <ToggleButton
                android:id="@+id/toggle_sounds"
                android:layout_width="@dimen/settings_toggle_size"
                android:layout_height="@dimen/settings_toggle_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_toggle_button"
                android:textOn=""
                android:textOff=""/>
        </RelativeLayout>

        <com.apphunt.app.ui.views.widgets.AHButton
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_sounds"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/settings_btn_dismiss_margin_top"
            android:text="@string/dismiss"
            android:textColor="@android:color/white"
            android:textSize="@dimen/settings_button_dismiss_text"
            android:background="@android:color/transparent"
            app:typefacePath="fonts/OpenSans-Bold.ttf"/>
    </RelativeLayout>
</RelativeLayout>