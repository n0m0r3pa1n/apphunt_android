<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_margin="@dimen/collection_app_margin"
    android:layout_width="@dimen/collection_app_width"
    android:layout_height="@dimen/collection_app_width">
    <FrameLayout
        android:background="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icon"
            android:contentDescription="Application icon"
            android:scaleType="fitCenter"
            android:paddingLeft="@dimen/collection_app_icon_padding"
            android:paddingRight="@dimen/collection_app_icon_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="#CC818181"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/position"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:background="@color/bg_primary"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/app_name"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/position"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/created_by"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>