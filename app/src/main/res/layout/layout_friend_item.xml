<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"/>

    <com.apphunt.app.ui.views.widgets.AHTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/invite"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
        android:textColor="#B4FFFFFF"
        android:gravity="center_vertical"
        app:typefacePath="fonts/OpenSans-Light.ttf"/>

    <Switch
        android:id="@+id/sw_invite"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:thumb="@android:color/transparent"
        android:track="@android:color/transparent"
        android:background="@drawable/switch_invite"
        android:text="invite"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:hapticFeedbackEnabled="true"
        android:gravity="center"/>
</RelativeLayout>